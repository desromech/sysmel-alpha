namespace SysmelKernel definition: {
    if: Compiler compilationTarget pointerSize = 4 then: {
        alias IntPointer := Int32.
        alias UIntPointer := UInt32.
    } else: {
        alias IntPointer := Int64.
        alias UIntPointer := UInt64.
    }.

    Compiler compilationTarget
        intPointerType: IntPointer;
        uintPointerType: UIntPointer;
        yourself
} // End of namespace SysmelKernel
