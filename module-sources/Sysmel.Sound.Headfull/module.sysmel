Compiler
    importModulesNamed: #(
        #"Sysmel.Sound.Core"
    ).

compileTime if: Compiler compilationTarget isDesktopPC then: {
    Compiler
        importIndirectModulesNamed: #(
            #"Sysmel.Sound.Driver.SDL2"
        )
}.

compileTime if: Compiler compilationTarget isWebAssembly then: {
    Compiler
        importIndirectModulesNamed: #(
            #"Sysmel.Sound.Driver.SDL2"
        )
}.